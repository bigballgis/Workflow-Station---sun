# =====================================================
# Production Environment Configuration
# =====================================================

# Environment
ENVIRONMENT=prod
SPRING_PROFILES_ACTIVE=prod

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5434
POSTGRES_DB=workflow_platform_prod
POSTGRES_USER=platform_prod
POSTGRES_PASSWORD=CHANGE_ME_PROD_SECURE_PASSWORD

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6381
REDIS_PASSWORD=CHANGE_ME_PROD_REDIS_PASSWORD
REDIS_DATABASE=0

# Kafka Configuration
KAFKA_PORT=9094
ZOOKEEPER_PORT=2183
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_GROUP_ID_PREFIX=prod

# JWT Configuration
JWT_SECRET=CHANGE_ME_PROD_256_BIT_SECRET_KEY_FOR_JWT_SIGNING_PRODUCTION_ENVIRONMENT
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Encryption Configuration
ENCRYPTION_KEY=CHANGE_ME_PROD_32_BYTE_AES_256_KEY

# Backend Service Ports
API_GATEWAY_PORT=8280
WORKFLOW_ENGINE_PORT=8281
USER_PORTAL_BACKEND_PORT=8282
DEVELOPER_WORKSTATION_BACKEND_PORT=8283
ADMIN_CENTER_BACKEND_PORT=8290

# Frontend Service Ports
ADMIN_CENTER_FRONTEND_PORT=3200
USER_PORTAL_FRONTEND_PORT=3201
DEVELOPER_WORKSTATION_FRONTEND_PORT=3202

# External Configuration
EXTERNAL_CONFIG_URL=https://config.workflow-platform.com
MONITORING_ENDPOINT=https://monitoring.workflow-platform.com
CACHE_TTL=7200
API_RATE_LIMIT=500

# Logging
LOG_LEVEL=WARN
LOG_FILE_PATH=/app/logs

# Database Initialization
DB_INIT_MODE=schema-only

# Security Configuration
SECURITY_PASSWORD_MIN_LENGTH=12
SECURITY_LOGIN_MAX_FAILED_ATTEMPTS=3
SECURITY_SESSION_TIMEOUT_MINUTES=15

# Cache Configuration
CACHE_USER_TTL_MINUTES=60
CACHE_PERMISSION_TTL_MINUTES=120
CACHE_DICTIONARY_TTL_MINUTES=240

# Monitoring
MANAGEMENT_ENDPOINTS_ENABLED=false
ACTUATOR_HEALTH_SHOW_DETAILS=never

# Production Features
SWAGGER_ENABLED=false
SQL_SHOW=false
HIBERNATE_FORMAT_SQL=false

# Performance Settings
HIKARI_MAXIMUM_POOL_SIZE=50
HIKARI_MINIMUM_IDLE=10
HIKARI_CONNECTION_TIMEOUT=30000
HIKARI_MAX_LIFETIME=1800000

# Production Security
SSL_ENABLED=true
HTTPS_ONLY=true
SECURE_COOKIES=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30