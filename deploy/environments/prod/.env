# =====================================================
# Production Environment Configuration
# External infrastructure: PostgreSQL, Redis, Kafka
# =====================================================

# Environment
ENVIRONMENT=prod
SPRING_PROFILES_ACTIVE=prod

# Registry Configuration
REGISTRY=harbor.company.com/workflow
IMAGE_TAG=latest

# Database Configuration (External)
POSTGRES_HOST=prod-postgres.internal
POSTGRES_PORT=5432
POSTGRES_DB=workflow_platform_prod
POSTGRES_USER=platform_prod
POSTGRES_PASSWORD=CHANGE_ME_PROD_SECURE_PASSWORD

# Redis Configuration (External)
REDIS_HOST=prod-redis.internal
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_PROD_REDIS_PASSWORD
REDIS_DATABASE=0

# Kafka Configuration (External)
KAFKA_BOOTSTRAP_SERVERS=prod-kafka.internal:9092
KAFKA_GROUP_ID_PREFIX=prod

# JWT Configuration
JWT_SECRET=CHANGE_ME_PROD_256_BIT_SECRET_KEY_FOR_JWT_SIGNING_PRODUCTION_ENVIRONMENT
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Encryption Configuration
ENCRYPTION_SECRET_KEY=CHANGE_ME_PROD_32_BYTE_AES_256_KEY

# Backend Service Ports
API_GATEWAY_PORT=8080
WORKFLOW_ENGINE_PORT=8081
USER_PORTAL_PORT=8082
DEVELOPER_WORKSTATION_PORT=8083
ADMIN_CENTER_PORT=8090

# Frontend Service Ports
FRONTEND_ADMIN_PORT=3000
FRONTEND_PORTAL_PORT=3001
FRONTEND_DEVELOPER_PORT=3002

# Logging
LOG_LEVEL=WARN
LOG_FILE_PATH=/app/logs

# Security Configuration
SECURITY_PASSWORD_MIN_LENGTH=12
SECURITY_LOGIN_MAX_FAILED_ATTEMPTS=3
SECURITY_SESSION_TIMEOUT_MINUTES=15

# Cache Configuration
CACHE_USER_TTL_MINUTES=60
CACHE_PERMISSION_TTL_MINUTES=120
CACHE_DICTIONARY_TTL_MINUTES=240

# Monitoring
MANAGEMENT_ENDPOINTS_ENABLED=false
ACTUATOR_HEALTH_SHOW_DETAILS=never

# Production Features
SWAGGER_ENABLED=false
SQL_SHOW=false
HIBERNATE_FORMAT_SQL=false

# Performance Settings
HIKARI_MAXIMUM_POOL_SIZE=50
HIKARI_MINIMUM_IDLE=10
HIKARI_CONNECTION_TIMEOUT=30000
HIKARI_MAX_LIFETIME=1800000

# Docker Internal Service URLs (backend-to-backend communication)
ADMIN_CENTER_URL=http://admin-center:8080
WORKFLOW_ENGINE_URL=http://workflow-engine:8080
USER_PORTAL_URL=http://user-portal:8080
DEVELOPER_WORKSTATION_URL=http://developer-workstation:8080

# Frontend Backend URLs (nginx proxy to backend services)
ADMIN_CENTER_BACKEND_URL=http://admin-center:8080
USER_PORTAL_BACKEND_URL=http://user-portal:8080
DEVELOPER_WORKSTATION_BACKEND_URL=http://developer-workstation:8080

# Production Security
SSL_ENABLED=true
HTTPS_ONLY=true
SECURE_COOKIES=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
