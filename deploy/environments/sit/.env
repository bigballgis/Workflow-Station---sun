# =====================================================
# System Integration Test (SIT) Environment Configuration
# External infrastructure: PostgreSQL, Redis, Kafka
# =====================================================

# Environment
ENVIRONMENT=sit
SPRING_PROFILES_ACTIVE=sit

# Registry Configuration
REGISTRY=harbor.company.com/workflow
IMAGE_TAG=latest

# Database Configuration (External)
POSTGRES_HOST=sit-postgres.internal
POSTGRES_PORT=5432
POSTGRES_DB=workflow_platform_sit
POSTGRES_USER=platform_sit
POSTGRES_PASSWORD=sit_secure_password_456

# Redis Configuration (External)
REDIS_HOST=sit-redis.internal
REDIS_PORT=6379
REDIS_PASSWORD=sit_redis_secure_456
REDIS_DATABASE=0

# Kafka Configuration (External)
KAFKA_BOOTSTRAP_SERVERS=sit-kafka.internal:9092
KAFKA_GROUP_ID_PREFIX=sit

# JWT Configuration
JWT_SECRET=sit-256-bit-secret-key-for-jwt-signing-system-integration-test-env
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Encryption Configuration
ENCRYPTION_SECRET_KEY=sit-32-byte-aes-256-secret-key!!

# Backend Service Ports
API_GATEWAY_PORT=8080
WORKFLOW_ENGINE_PORT=8081
USER_PORTAL_PORT=8082
DEVELOPER_WORKSTATION_PORT=8083
ADMIN_CENTER_PORT=8090

# Frontend Ports
FRONTEND_ADMIN_PORT=3000
FRONTEND_PORTAL_PORT=3001
FRONTEND_DEVELOPER_PORT=3002

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs

# Security Configuration
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_LOGIN_MAX_FAILED_ATTEMPTS=5
SECURITY_SESSION_TIMEOUT_MINUTES=30

# Cache Configuration
CACHE_USER_TTL_MINUTES=30
CACHE_PERMISSION_TTL_MINUTES=60
CACHE_DICTIONARY_TTL_MINUTES=120

# Monitoring
MANAGEMENT_ENDPOINTS_ENABLED=true
ACTUATOR_HEALTH_SHOW_DETAILS=when_authorized

# SIT Features
SWAGGER_ENABLED=true
SQL_SHOW=false
HIBERNATE_FORMAT_SQL=false

# Performance Settings
HIKARI_MAXIMUM_POOL_SIZE=15
HIKARI_MINIMUM_IDLE=3
HIKARI_CONNECTION_TIMEOUT=15000

# Docker Internal Service URLs (backend-to-backend communication)
ADMIN_CENTER_URL=http://admin-center:8080
WORKFLOW_ENGINE_URL=http://workflow-engine:8080
USER_PORTAL_URL=http://user-portal:8080
DEVELOPER_WORKSTATION_URL=http://developer-workstation:8080

# Frontend Backend URLs (nginx proxy to backend services)
ADMIN_CENTER_BACKEND_URL=http://admin-center:8080
USER_PORTAL_BACKEND_URL=http://user-portal:8080
DEVELOPER_WORKSTATION_BACKEND_URL=http://developer-workstation:8080
