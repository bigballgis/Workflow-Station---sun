# =====================================================
# Development Environment Configuration
# =====================================================

# Environment
ENVIRONMENT=dev
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=workflow_platform_dev
POSTGRES_USER=platform_dev
POSTGRES_PASSWORD=dev_password_123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_123
REDIS_DATABASE=0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID_PREFIX=dev

# JWT Configuration
JWT_SECRET=dev-256-bit-secret-key-for-jwt-signing-development-environment-only
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Encryption Configuration
ENCRYPTION_SECRET_KEY=dev-32-byte-aes-256-secret-key!!

# Server Ports
API_GATEWAY_PORT=8080
WORKFLOW_ENGINE_PORT=8081
USER_PORTAL_PORT=8082
DEVELOPER_WORKSTATION_PORT=8083
ADMIN_CENTER_PORT=8090

# Frontend Ports
ADMIN_CENTER_FRONTEND_PORT=3000
USER_PORTAL_FRONTEND_PORT=3001
DEVELOPER_WORKSTATION_FRONTEND_PORT=3002

# Logging
LOG_LEVEL=DEBUG
LOG_FILE_PATH=./logs

# Database Initialization
DB_INIT_MODE=full-test

# Backend Service URLs (for backend-to-backend communication)
ADMIN_CENTER_URL=http://localhost:8090
WORKFLOW_ENGINE_URL=http://localhost:8081
USER_PORTAL_URL=http://localhost:8082
DEVELOPER_WORKSTATION_URL=http://localhost:8083
API_GATEWAY_URL=http://localhost:8080

# Frontend Backend URLs (for nginx proxy configuration in Docker)
# These are used by frontend containers to proxy API requests to backend services
ADMIN_CENTER_BACKEND_URL=http://platform-admin-center-dev:8080
USER_PORTAL_BACKEND_URL=http://platform-user-portal-dev:8080
DEVELOPER_WORKSTATION_BACKEND_URL=http://platform-developer-workstation-dev:8080
WORKFLOW_ENGINE_BACKEND_URL=http://platform-workflow-engine-dev:8080
API_GATEWAY_BACKEND_URL=http://platform-api-gateway-dev:8080

# Security Configuration
SECURITY_PASSWORD_MIN_LENGTH=6
SECURITY_LOGIN_MAX_FAILED_ATTEMPTS=10
SECURITY_SESSION_TIMEOUT_MINUTES=60

# Cache Configuration
CACHE_USER_TTL_MINUTES=15
CACHE_PERMISSION_TTL_MINUTES=30
CACHE_DICTIONARY_TTL_MINUTES=60

# Monitoring
MANAGEMENT_ENDPOINTS_ENABLED=true
ACTUATOR_HEALTH_SHOW_DETAILS=always

# Development Features
SWAGGER_ENABLED=true
SQL_SHOW=true
HIBERNATE_FORMAT_SQL=true

# Flowable Configuration
FLOWABLE_SCHEMA_UPDATE=true