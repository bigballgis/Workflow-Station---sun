# =====================================================
# User Acceptance Test (UAT) Environment Configuration
# =====================================================

# Environment
ENVIRONMENT=uat
SPRING_PROFILES_ACTIVE=uat

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5433
POSTGRES_DB=workflow_platform_uat
POSTGRES_USER=platform_uat
POSTGRES_PASSWORD=uat_secure_password_789

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6380
REDIS_PASSWORD=uat_redis_secure_789
REDIS_DATABASE=0

# Kafka Configuration
KAFKA_PORT=9093
ZOOKEEPER_PORT=2182
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_GROUP_ID_PREFIX=uat

# JWT Configuration
JWT_SECRET=uat-256-bit-secret-key-for-jwt-signing-user-acceptance-test-environment
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Encryption Configuration
ENCRYPTION_KEY=uat-32-byte-aes-256-secret-key!!

# Backend Service Ports
API_GATEWAY_PORT=8180
WORKFLOW_ENGINE_PORT=8181
USER_PORTAL_BACKEND_PORT=8182
DEVELOPER_WORKSTATION_BACKEND_PORT=8183
ADMIN_CENTER_BACKEND_PORT=8190

# Frontend Service Ports
ADMIN_CENTER_FRONTEND_PORT=3100
USER_PORTAL_FRONTEND_PORT=3101
DEVELOPER_WORKSTATION_FRONTEND_PORT=3102

# External Configuration
EXTERNAL_CONFIG_URL=http://config-server:8888
MONITORING_ENDPOINT=http://monitoring:9090
CACHE_TTL=3600
API_RATE_LIMIT=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs

# Database Initialization
DB_INIT_MODE=with-admin

# Security Configuration
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_LOGIN_MAX_FAILED_ATTEMPTS=5
SECURITY_SESSION_TIMEOUT_MINUTES=30

# Cache Configuration
CACHE_USER_TTL_MINUTES=30
CACHE_PERMISSION_TTL_MINUTES=60
CACHE_DICTIONARY_TTL_MINUTES=120

# Monitoring
MANAGEMENT_ENDPOINTS_ENABLED=true
ACTUATOR_HEALTH_SHOW_DETAILS=when_authorized

# UAT Features
SWAGGER_ENABLED=true
SQL_SHOW=false
HIBERNATE_FORMAT_SQL=false

# Performance Settings
HIKARI_MAXIMUM_POOL_SIZE=20
HIKARI_MINIMUM_IDLE=5
HIKARI_CONNECTION_TIMEOUT=20000

# Load Testing
LOAD_TEST_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true