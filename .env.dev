# =====================================================
# 开发环境配置 (.env.dev)
# 用于本地 Docker 开发测试
# =====================================================

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Server Port (本地开发使用不同端口)
SERVER_PORT=8091

# Database Configuration (本地 Docker)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/workflow_platform
SPRING_DATASOURCE_USERNAME=platform
SPRING_DATASOURCE_PASSWORD=platform123

# Redis Configuration (本地 Docker)
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=redis123

# Service URLs (本地开发)
ADMIN_CENTER_URL=http://localhost:8092
WORKFLOW_ENGINE_URL=http://localhost:8091

# Security
JWT_SECRET_KEY=workflow-engine-jwt-secret-key-2026
ENCRYPTION_KEY=workflow-aes-256-encryption-key!

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_PLATFORM=DEBUG
