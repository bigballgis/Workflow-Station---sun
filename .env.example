# =====================================================
# Low-Code Workflow Platform - Environment Configuration
# Copy this file to .env and update values for your environment
# =====================================================

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=workflow_platform
POSTGRES_USER=platform
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# JWT Configuration
# Generate a secure 256-bit key for production
JWT_SECRET=your-256-bit-secret-key-for-jwt-signing
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Encryption Configuration
# Must be exactly 32 bytes for AES-256
ENCRYPTION_SECRET_KEY=your-32-byte-aes-256-secret-key!!

# Application Configuration
SPRING_PROFILES_ACTIVE=dev

# Logging
LOG_LEVEL=INFO

# Server Configuration
API_GATEWAY_PORT=8080
WORKFLOW_ENGINE_PORT=8081
ADMIN_CENTER_PORT=8082
DEVELOPER_WORKSTATION_PORT=8083
USER_PORTAL_PORT=8084
