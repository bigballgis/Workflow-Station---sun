# =====================================================
# Low-Code Workflow Platform - Environment Configuration
# =====================================================
# Copy this file to deploy/environments/dev/.env and update values.
# See BUILD_GUIDE.md for full documentation.
# =====================================================

# Database Configuration
POSTGRES_PORT=5432
POSTGRES_DB=workflow_platform_dev
POSTGRES_USER=platform_dev
POSTGRES_PASSWORD=dev_password_123

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_123

# JWT Configuration
# Generate a secure 256-bit key for production: openssl rand -base64 32
JWT_SECRET=dev-256-bit-secret-key-for-jwt-signing-development-environment-only
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Encryption Configuration
# Must be exactly 32 bytes for AES-256
ENCRYPTION_SECRET_KEY=dev-32-byte-aes-256-secret-key!!

# Backend Ports
WORKFLOW_ENGINE_PORT=8081
ADMIN_CENTER_PORT=8090
USER_PORTAL_PORT=8082
DEVELOPER_WORKSTATION_PORT=8083

# Frontend Ports
ADMIN_CENTER_FRONTEND_PORT=3000
USER_PORTAL_FRONTEND_PORT=3001
DEVELOPER_WORKSTATION_FRONTEND_PORT=3002

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:5173

# Features
SWAGGER_ENABLED=true

# Database Initialization
DB_INIT_MODE=full-test
